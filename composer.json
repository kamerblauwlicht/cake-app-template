{
    "name": "scherersoftware/cake-app-template",
    "description": "scherer software CakePHP skeleton app",
    "homepage": "https://scherer-software.de",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=7.1.0",
        "cakephp/cakephp": "3.4.*",
        "mobiledetect/mobiledetectlib": "2.8.*",
        "cakephp/migrations": "~1.0",
        "cakephp/plugin-installer": "~1.0",
        "codekanzlei/cake-auth-actions": "1.0.*",
        "codekanzlei/cake-list-filter": "1.3.*",
        "codekanzlei/cake-cktools": "1.2.*",
        "codekanzlei/cake-frontend-bridge": "1.2.*",
        "codekanzlei/cake-attachments": "1.0.*",
        "codekanzlei/cake-notifications": "v2.1.*",
        "codekanzlei/cake-model-history": "2.1.*",
        "codekanzlei/cake-bootstrap3": "1.1.*",
        "scherersoftware/cake-monitor": "1.1.*",
        "scherersoftware/cakephp-schema": "1.0.*",
        "scherersoftware/cake-api-baselayer": "1.0.*",
        "scherersoftware/cake-language-switcher": "1.0.*",
        "markstory/asset_compress": "3.2.*",
        "tedivm/jshrink": "1.1.*",
        "friendsofcake/bootstrap-ui": "1.1.*",
        "admad/cakephp-glide": "2.0.*",
        "josegonzalez/dotenv": "2.0.*",
        "beberlei/assert": "2.7.*"
    },
    "require-dev": {
        "psy/psysh": "@stable",
        "phpunit/phpunit": "6.*",
        "cakephp/debug_kit": "~3.2",
        "cakephp/bake": "~1.1",
        "cakephp/cakephp-codesniffer": "2.3.*",
        "scherersoftware/coding-standard": "2.0.*",
        "squizlabs/php_codesniffer": "^2.8",
        "phpstan/phpstan": "^0.6.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src",
            "Api\\V1\\": "./plugins/Api/V1/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests",
            "Api\\V1\\Test\\": "./plugins/Api/V1/tests"
        }
    },
    "scripts": {
        "post-install-cmd": "App\\Console\\Installer::postInstall",
        "post-create-project-cmd": "App\\Console\\Installer::postInstall",
        "post-autoload-dump": "Cake\\Composer\\Installer\\PluginInstaller::postAutoloadDump",
        "check": [
            "@test",
            "@php-syntax",
            "@cs-check",
            "@phpstan"
        ],
        "check-php": [
            "@test",
            "@php-syntax",
            "@php-check"
        ],
        "check-server": [
            "@php-syntax",
            "@cs-check"
        ],
        "cs-check": [
            "@php-check",
            "@js-check"
        ],
        "php-check": "vendor/bin/phpcs --colors -pn --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests ./plugins && vendor/bin/phpcs --colors -p --standard=ruleset.xml ./src ./plugins",
        "php-fix": "php-cs-fixer fix --fixers=ordered_use,phpdoc_indent -vv src/ tests/ && vendor/bin/phpcbf --colors --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests",
        "js-check": "node_modules/.bin/eslint . --quiet",
        "js-fix": "node_modules/.bin/eslint . --fix",
        "php-syntax": "bin/php_syntax.sh",
        "test": "vendor/bin/phpunit --colors=always",
        "i18n": "bin/i18n.sh",
        "coverage": "phpunit --log-junit webroot/coverage/unitreport.xml --coverage-html webroot/coverage --coverage-clover webroot/coverage/coverage.xml",
        "phpstan": "php -d memory_limit=-1 vendor/bin/phpstan analyse -c phpstan.neon -l 1 src plugins tests",
        "dev-install": "composer install && npm install && bower install && echo 'DONE'"
    },
    "minimum-stability": "beta",
    "prefer-stable": true
}
